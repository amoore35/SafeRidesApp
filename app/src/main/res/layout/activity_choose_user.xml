<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ChooseUserActivity"
    android:background="#D4AF37">

    <TextView
        android:text="@string/welcome"
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="33dp"
        android:textStyle="bold"
        android:textColor="#800000"
        android:gravity="center"/>

    <TextView
        android:text="@string/pick_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/textView"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/welcome"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rider"
        android:id="@+id/ride"
        android:onClick="onClickRider"
        android:background="#323232"
        android:textColor="#ffffff"
        android:width="125dp"
        android:layout_above="@+id/driver"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/driver"
        android:id="@+id/driver"
        android:onClick="onClickDriver"
        android:background="#323232"
        android:textColor="#ffffff"
        android:width="125dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/ride" />

</RelativeLayout>
